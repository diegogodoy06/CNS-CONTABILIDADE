# ===========================================
# CNS Contabilidade - Backend Configuration
# ===========================================

# Ambiente
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Database PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/cns_contabil_db?schema=public"

# JWT Authentication
JWT_SECRET=sua-chave-secreta-muito-segura-aqui-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=sua-chave-refresh-secreta-muito-segura-aqui
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@cnscontabilidade.com.br

# Storage (documentos)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
